{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {

    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true // Enforces .js for modules
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
